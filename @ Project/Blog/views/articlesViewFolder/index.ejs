<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    
    <title>Home Articles</title>
</head>
<body>
    <div class="container">

        <h1 class="mb-4">All Article</h1>
        <a href="/articles/create" class="btn btn-success">New Article</a>

        <div class="container">
            <div class="row">
                <% articles.forEach((item, index) => { %>
                    <div class="col">
                        <div class="card mt-4" style="width: 38rem; background-color: rgb(212, 212, 212);">
                            <div class="card-body">
                                <h5 class="card-title"> <%= item.title %> </h5>
                                <h5 class="card-title"> <%= index+1 %> </h5>
                                <div class="card-subtitle text-muted mb-2">Date: <%= item.createdAt.toLocaleDateString()%> </div>
                                <div class="card-text mb-2"> <%= item.description %> </div>
                                <a class="btn btn-info" href="/articles/<%= item.slug %>">Read More</a>
                                <button type="button" class="btn btn-warning">Update</button>
                                <form action="/articles" method="POST">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <% if(index % 2 != 0) { %>
                        </div>
                        <div class="row">
                    <% } %>
                <% }) %>
            </div>
        </div>

    </div>
    <!-- <h1><%= articles %></h1> -->
    <!-- <h1><%= articles.title %></h1> -->
    <!-- <p><%= articles.createdAt %></p> -->
    <!-- <p><%= articles.description %></p> -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>
